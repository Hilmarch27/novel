generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid()) // Primary key
  name      String
  email     String   @unique
  password  String
  posts     Post[]   // One-to-many relationship with Post
}

model Post {
  id        String   @id @default(cuid()) // Primary key
  title     String
  slug      String   @unique
  content   String
  authorId  String?   // Foreign key to User
  author    User?     @relation(fields: [authorId], references: [id]) // Define relation to User
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
